{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Default capabilities for the main window",
    "windows": [
        "main"
    ],
    "permissions": [
        "fs:default",
        "fs:read-all",
        "fs:write-all",
        "fs:allow-rename",
        "fs:allow-mkdir",
        "fs:allow-exists",
        "fs:allow-watch",
        "fs:read-dirs",
        {
            "identifier": "fs:scope",
            "allow": [
                {
                    "path": "**/*",
                    "allow_hidden": true
                }
            ],
            "require_literal_leading_dot": false
        },
        "core:path:allow-resolve",
        "core:path:allow-resolve-directory",
        "core:path:allow-basename",
        "core:path:allow-dirname",
        "core:path:allow-join",
        "shell:allow-open",
        "store:allow-clear",
        "store:allow-delete",
        "store:allow-entries",
        "store:allow-get",
        "store:allow-get-store",
        "store:allow-has",
        "store:allow-keys",
        "store:allow-length",
        "store:allow-load",
        "store:allow-reload",
        "store:allow-reset",
        "store:allow-save",
        "store:allow-set",
        "store:allow-values",
        "http:allow-fetch",
        {
            "identifier": "http:default",
            "allow": [
                {
                    "url": "https://**"
                },
                {
                    "url": "http://**"
                }
            ]
        }
    ]
}