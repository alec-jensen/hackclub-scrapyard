<style is:global>
  @import "https://www.nerdfonts.com/assets/css/webfont.css";
	:root {
		font-family: Inter, Avenir, Helvetica, Arial, sans-serif;
		font-size: 16px;
		line-height: 24px;
    font-weight: 400;

		color: #0f0f0f;
		background-color: #f6f6f6;

		font-synthesis: none;
		text-rendering: optimizeLegibility;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
		-webkit-text-size-adjust: 100%;
  }
  body {margin: 0;}

	.logo {
		height: 6em;
		padding: 1.5em;
		will-change: filter;
		transition: 0.75s;
	}

	.row {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	a {
		font-weight: 500;
		color: #646cff;
		text-decoration: inherit;
	}

	a:hover {
		color: #535bf2;
	}

	h1 {
		text-align: center;
	}

	input,
	button {
		border-radius: 8px;
		border: 1px solid transparent;
		padding: 0.6em 1.2em;
		font-size: 1em;
		font-weight: 500;
		font-family: inherit;
		color: #0f0f0f;
		background-color: #ffffff;
		transition: border-color 0.25s;
		box-shadow: 0 2px 2px rgba(0, 0, 0, 0.2);
	}

	button {
		cursor: pointer;
	}

	button:hover {
		border-color: #396cd8;
	}

	input,
	button {
		outline: none;
  }
  #main-container, header {display: flex; gap: 1rem;}
  header {
    align-items:center;
    position: sticky; top: 0; box-sizing: border-box;
    width: 100%; z-index: 100; padding: 1rem;
    background-color: #222024; height: 3rem;
  }
  header>input {flex-grow: 1;}
  #main-container {background-color: #2B292E;}
  #main-container>nav {
    flex-basis: 10rem; padding: 1rem;
    position: sticky; top: 3rem; height: 100%;
  }
  #main-container>nav ul {padding: 0; margin: 0; list-style: none; height: 100%;}
  main {width: 100%; padding-left: 1.5rem; background-color: #333036;}
  #file-list li:hover {background-color: #49454D;}

	@media (prefers-color-scheme: dark) {
		:root {
			color: #C7C5C9;
			background-color: #333036;
		}

		a:hover {
			color: #00AAFF;
		}

		input,
		button {
			color: #ffffff;
			background-color: #0f0f0f98;
		}
	}
</style>
